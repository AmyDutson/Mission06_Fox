@{
    ViewData["Title"] = "Film Collection";
}

@model List<Submission>

<h2>The Film Collection</h2>

<table class="table table-bordered">

    <thead class="fw-bold">
        <tr>
            <td>Category</td>
            <td>Movie Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>   
    </thead>

    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.IsEdited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
            </tr>
        </tbody>
    }
</table>